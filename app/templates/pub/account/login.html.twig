{% extends 'pub/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light p-3">
                    <h1>Connexion</h1>
                    <hr>
                    {% if hasError %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <div class="col-10">
                                <input type="text"
                                       class="form-control"
                                       id="email"
                                       name="_username"
                                       placeholder="Your email address..."
                                       value="{{ lastUsername }}"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <div class="col-10">
                                <input type="password"
                                       class="form-control"
                                       id="password"
                                       name="_password"
                                       placeholder="Your password..."
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Login !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
